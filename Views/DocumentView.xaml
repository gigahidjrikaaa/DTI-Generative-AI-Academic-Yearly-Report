<Page
    x:Class="DTI_Generative_AI_Academic_Yearly_Report.Views.DocumentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DTI_Generative_AI_Academic_Yearly_Report.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DocumentView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource DTI-Blue}"
    mc:Ignorable="d">

    <Grid MinWidth="500" MinHeight="300" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <TextBlock Text="DTI Generative AI Academic Yearly Report" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White" />
            <TextBlock Text="This report was generated using the DTI Generative AI Academic Yearly Report Generator" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White" />
        </StackPanel>

    </Grid>
</Page>
